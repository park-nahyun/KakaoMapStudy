<script type="text/javascript">
   
   function initialize()
   {
      container = document.getElementById("map");
      options =
      {
         center : new kakao.maps.LatLng(37.556535, 126.919490)      //-- 풍성빌딩
         , level : 3                                                 //-- 지도 확대 레벨 3
