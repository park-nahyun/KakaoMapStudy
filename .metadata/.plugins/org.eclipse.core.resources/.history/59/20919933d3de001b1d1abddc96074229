<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>MapTest005.html</title>

<script type="text/javascript" 
		src="//dapi.kakao.com/v2/maps/sdk.js?appkey=2fffe9f1e38b25b65e667dd38b8dc364"></script>
		
<script type="text/javascript">
	
	function initialize()
	{
		container = document.getElementById("map");
		options =
		{
			center: new kakao.maps.LatLng(37.556461, 126.919521) 	//-- 풍성빌딩
			, level: 3  											//-- 지도 확대 레벨 3
		}
		
		// 지도를 그릴 대상 div 와 옵션을 넘겨주며 지도 생성
		map = new kakao.maps.Map(container, options);
		
		// 지도 레벨 표시 함수 호출
		displayLevel();
	}
	
	// ※ 지도의 레벨은 지도의 확대 축소 수준을 의미한다.
	//   지도의 레벨(1 ~ 14)은 숫자가 작을수록 지도의 확대 수준이 높다.
	
	function displayLevel()
	{
		var levelEl = document.getElementById("mapLevel");
		levelEl.innerHtml = "현재 지도 레벨은 " + map.getLevel() + "레벨 입니다.";	
	}
	
	function zoomIn()
	{
		// 현재의 지도 레벨 얻어오기
		var level = map.getLevel();
		
		map.setLevel(level-1);
		
		displayLevel();
	}
	
	function zoomOut()
	{
	    // 현재의 지도 레벨 얻어오기
	    var level = map.getLevel();
	      
	    // 지도의 현재 레벨에서 1 올리기 (→ 지도 축소)
	    map.setLevel(level+1);
	      
	    // 지도 레벨 표시 
	    displayLevel();
	}

</script>

</head>
<body onload="initialize()">

<!-- 발급받은 App Key -->
<!-- appkey=2fffe9f1e38b25b65e667dd38b8dc364 -->
<!-- 지도의 중심 좌표 -->
<!-- 37.556461, 126.919521 -->

<div>
	<h1>Kakao Map 레벨 전환</h1>
	<hr />
</div>

<!— 지도를 그릴 div 공간 확보(지정) —>
<div id="map" style="width: 100%; height: 350px;"></div>

<!— 지도 레벨 출력 —>
<span id="mapLevel"></span>

<p>
	<button type="button" onclick="zoomIn()">지도 레벨 -1 (낮추기, 확대)</button>
	<button type="button" onclick="zoomOut()">지도 레벨 +1 (낮추기, 확대)</button>
</p>

</body>
</html>